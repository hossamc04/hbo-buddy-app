<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <!--titlelayer-->
    <TextView
        android:id="@+id/coach_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/coach_image"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:layout_below="@+id/coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars[0]" />



    <TextView
        android:layout_margin="15dp"
        android:id="@+id/coach_study"
        android:layout_toRightOf="@id/coach_image"
        android:layout_below="@+id/coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:layout_margin="15dp"
        android:id="@+id/study_year"
        android:layout_toRightOf="@id/coach_image"
        android:layout_below="@+id/coach_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:layout_margin="15dp"
        android:id="@+id/interests"
        android:layout_toRightOf="@id/coach_image"
        android:layout_below="@+id/study_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interests"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/coach_image"
        android:text="read more"
        android:textColor="@color/colorAccent" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/collapsable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/coach_image">

        <TextView
            android:layout_margin="15dp"
            android:id="@+id/coach_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:layout_margin="15dp"
            android:layout_below="@id/coach_bio"
            android:id="@+id/read_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="read less"
            android:textColor="@color/colorAccent" />
            />



        <Button

            android:id="@+id/selecteerBuddyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/read_less"
            android:text="selecteer buddy"
            />








    </RelativeLayout>









</RelativeLayout>



