<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authenticator.MakeNewAccountActivity">

    <EditText
        android:id="@+id/nieuw_acc_leerlingnummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:hint="leerlingnummer"/>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nieuw_acc_leerlingnummer"
        android:layout_margin="15dp"
        android:id="@+id/niew_account_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/niew_account_password"
        android:id="@+id/submit_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit" />

    <CheckBox
       android:layout_margin="10dp"
        android:layout_below="@id/submit_new_button"
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="hbo-account" />

</RelativeLayout>