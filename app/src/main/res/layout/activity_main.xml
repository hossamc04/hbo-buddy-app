<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/toBuddySelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoek buddy" />

    <Button
        android:layout_below="@id/toBuddySelection"
        android:id="@+id/toChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naar chat" />

    <Button
        android:layout_below="@+id/toChat"
        android:id="@+id/toEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naar Profiel beweken" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>